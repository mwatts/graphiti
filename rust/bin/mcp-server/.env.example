# Graphiti MCP Server Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=gpt-4.1-mini
SMALL_MODEL_NAME=gpt-4.1-nano
EMBEDDER_MODEL_NAME=text-embedding-3-small
LLM_TEMPERATURE=0.0

# Neo4j Database Configuration (Required)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Azure OpenAI Configuration (Optional - alternative to OpenAI)
# AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT_NAME=your-chat-deployment-name
# AZURE_OPENAI_API_VERSION=2024-02-15-preview
# AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=your-embedding-deployment-name
# AZURE_OPENAI_EMBEDDING_API_VERSION=2024-02-15-preview
# AZURE_OPENAI_USE_MANAGED_IDENTITY=false

# Server Configuration (Optional)
# Default values will be used if not specified

# Group ID for organizing data (auto-generated if not provided)
# GROUP_ID=my-session-id

# Model temperature for creativity/determinism (0.0-2.0)
# LLM_TEMPERATURE=0.0

# Custom entity extraction (true/false)
# USE_CUSTOM_ENTITIES=false

# Development/Testing Options
# DESTROY_GRAPH=false  # WARNING: This will delete all data!
# RUST_LOG=info        # Logging level (error, warn, info, debug, trace)
